<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Create_Sicknote"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create SickNote"
            android:textSize="40dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:inputType="number"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/SN_Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DD/MM/YYYY"
            android:layout_margin="20dp"
            android:inputType="number"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospital"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:inputType="number"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/SN_hospital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex Vedanta"
            android:layout_margin="20dp"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor ID"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/SN_Did"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex 12345"
            android:layout_margin="20dp"
            android:inputType="number"></EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor Name"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/SN_DName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Gill Gates"
            android:layout_margin="20dp"
            android:inputType="number"></EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor Phone No"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:inputType="number"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/SN_DNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex Fever"
            android:layout_margin="20dp"
            android:inputType="number"></EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient ID"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/SN_Pid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex 1234"
            android:layout_margin="20dp"
            android:inputType="number"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient name"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/SN_Pname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex Harry"
            android:layout_margin="20dp"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type Of SickNote"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:inputType="number"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/SN_sick_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex Fever"
            android:layout_margin="20dp"></EditText>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sick Note"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:inputType="number"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/SN_Note"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex. I am down with fever and \nflu because of which I will\n not be able to come to \nthe office for at least 5 days."
            android:inputType="textMultiLine"
            android:minLines="10"
            android:gravity="start"
            />

        <Button
            android:id="@+id/Sn_Create_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Sicknote"
            android:layout_gravity="center"
            android:layout_margin="40dp"
            android:textSize="30dp"
            android:backgroundTint="@color/btncolor"
            android:textColor="@color/white"
            android:textStyle="bold"
            ></Button>
    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pharmacy_Registration"
    android:orientation="vertical"
    android:background="@color/cardviewBG">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pharmacy Registration"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_marginTop="70dp"
            android:layout_margin="20dp"
            android:gravity="center"></TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Own Full Name"
            android:layout_marginTop="39dp"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/Pharma_R_OwnName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Gill Gates"
            android:layout_margin="20dp"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Name"
            android:layout_marginTop="39dp"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/Pharma_R_ShopName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ABC Pharmacy"
            android:layout_margin="20dp"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginTop="39dp"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/Pharma_R_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="amitshah@xzy.com"
            android:inputType="textEmailAddress"
            android:layout_margin="20dp"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile No"
            android:layout_marginTop="39dp"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/Pharma_R_MobileNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="9922457834"
            android:inputType="number"
            android:layout_margin="20dp"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:layout_marginTop="39dp"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/Pharma_R_Address"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="25, Street near Apploto Hospital"
            android:inputType="textMultiLine"
            android:minLines="10"
            android:gravity="start"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Landmark"
            android:layout_marginTop="39dp"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/Pharma_R_Landmark"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Near Wallmart"
            android:inputType="textMultiLine"
            android:minLines="10"
            android:gravity="start"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:layout_marginTop="39dp"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/Pharma_R_City"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ahemdabad"
            android:layout_margin="20dp"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="State"
            android:layout_marginTop="39dp"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/Pharma_R_State"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Gujarat"
            android:layout_margin="20dp"></EditText>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_marginTop="39dp"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/Pharma_R_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Use A-Z a-z 0-9 @#$"
            android:layout_margin="20dp"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:layout_marginTop="39dp"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/Pharma_R_Confirm_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Use A-Z a-z 0-9 @#$"
            android:layout_margin="20dp"></EditText>

        <Button
            android:id="@+id/Pharma_R_Register_Doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:onClick="Pharma_Register_Pharmarcy"
            android:background="@drawable/button_background"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"></Button>

        <Button
            android:id="@+id/Pharma_R_BackToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:onClick="Pharma_BackToLogin"
            android:background="@drawable/button_background"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"></Button>
    </LinearLayout>
</androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
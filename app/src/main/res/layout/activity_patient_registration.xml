<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Patient_Registration"
    android:orientation="vertical"
    android:background="@color/cardviewBG">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Patient Registration"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_marginTop="70dp"
            android:layout_margin="20dp"
            android:gravity="center"></TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:background="@drawable/background_border">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:layout_marginTop="39dp"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/PR_FirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Amit"
            android:layout_margin="20dp"></EditText>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:layout_marginTop="39dp"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/PR_LastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Shah"
            android:layout_margin="20dp"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginTop="39dp"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/PR_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="amitshah@xzy.com"
            android:inputType="textEmailAddress"
            android:layout_margin="20dp"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile No"
            android:layout_marginTop="39dp"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/PR_MobileNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="9922457834"
            android:inputType="number"
            android:maxLength="10"
            android:layout_margin="20dp"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Birth"
            android:layout_marginTop="39dp"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/PR_DateOfBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="28-08-2000"
            android:focusable="false"
            android:inputType="number"
            android:layout_margin="20dp"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:layout_marginTop="39dp"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/PR_Address"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="25, Street near Apploto Hospital"
            android:inputType="textMultiLine"
            android:minLines="10"
            android:gravity="start"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:layout_marginTop="39dp"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/PR_City"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ahemdabad"
            android:layout_margin="20dp"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="State"
            android:layout_marginTop="39dp"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>
        <EditText
            android:id="@+id/PR_State"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Gujarat"
            android:layout_margin="20dp"></EditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:layout_marginTop="39dp"
                    android:layout_margin="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20dp"></TextView>
        <RadioGroup
            android:id="@+id/PR_D_Gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <RadioButton
                android:id="@+id/Male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"/>
            <RadioButton
                android:id="@+id/Female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:checked="true"
                />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_marginTop="39dp"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_margin="10dp"
                    app:hintTextColor="@color/black"
                    app:passwordToggleEnabled="true">
        <EditText
            android:id="@+id/PR_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Use A-Z a-z 0-9 @#$"
            android:background="@color/white"
            android:layout_margin="20dp"></EditText>
                </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:layout_marginTop="39dp"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_margin="10dp"
                    app:hintTextColor="@color/black"
                    app:passwordToggleEnabled="true">
        <EditText
            android:id="@+id/PR_Confirm_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:background="@color/white"
            android:hint="Use A-Z a-z 0-9 @#$"
            android:layout_margin="20dp"></EditText>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/PR_worning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="center"></TextView>
        <Button
            android:id="@+id/PR_Register_Patient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:onClick="PR_Register_Patient"
            android:background="@drawable/button_background"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"></Button>

        <Button
            android:id="@+id/DR_BackToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:onClick="PR_BackToLogin"
            android:background="@drawable/button_background"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"></Button>

    </LinearLayout>
</androidx.cardview.widget.CardView>

    </LinearLayout>



</ScrollView>